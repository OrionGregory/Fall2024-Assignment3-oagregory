@model ClassDemo.Models.MovieActor

@{
    ViewData["Title"] = "Edit Movie-Actor Link";
}

<h1>Edit Movie-Actor Link</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="MovieId" />
            <input type="hidden" asp-for="ActorId" />
            
            <div class="form-group">
                <label asp-for="MovieId" class="control-label">Movie</label>
                <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId" disabled="disabled"></select>
            </div>

            <div class="form-group">
                <label asp-for="ActorId" class="control-label">Actor</label>
                <select asp-for="ActorId" class="form-control" asp-items="ViewBag.ActorId" disabled="disabled"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
