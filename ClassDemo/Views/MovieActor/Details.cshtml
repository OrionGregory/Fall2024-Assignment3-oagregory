@model ClassDemo.Models.MovieActor

@{
    ViewData["Title"] = "Movie-Actor Link Details";
}

<h1>Movie-Actor Link Details</h1>

<dl class="row">
    <dt class="col-sm-2">
        Movie
    </dt>
    <dd class="col-sm-10">
        <a asp-action="Details" asp-controller="Movies" asp-route-id="@Model.MovieId">@Model.Movie.Title</a>
    </dd>
    <dt class="col-sm-2">
        Actor
    </dt>
    <dd class="col-sm-10">
        <a asp-action="Details" asp-controller="Actors" asp-route-id="@Model.ActorId">@Model.Actor.Name</a>
    </dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-movieId="@Model.MovieId" asp-route-actorId="@Model.ActorId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
