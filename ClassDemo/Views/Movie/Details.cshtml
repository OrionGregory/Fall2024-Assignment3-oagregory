@model ClassDemo.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<h1>Movie Details</h1>
<p><strong>Title:</strong> @Model.Title</p>
<p><strong>IMDB Link:</strong> <a href="@Model.IMDBLink" target="_blank">@Model.IMDBLink</a></p>
<p><strong>Genre:</strong> @Model.Genre</p>
<p><strong>Year:</strong> @Model.Year</p>
<p><strong>Poster:</strong> <img src="@Model.Poster" alt="@Model.Title Poster" /></p>

